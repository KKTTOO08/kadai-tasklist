<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task) do |f| %>
      
      <% task = @task %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
        <div class="mb-3">
          <%= f.label :content, 'タスク' %>
          <%= f.text_area :content, class: 'form-control', rows: 1 %>
          
          <%= f.label :status, 'ステータス' %>
          <%= f.text_area :status, class: 'form-control', rows: 1 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the TaskLists</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>