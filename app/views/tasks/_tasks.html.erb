<% if tasks.any? %>
  <ul class="list-unstyled mt-2">
    <% tasks.each do |task| %>
      <li class="d-flex">
        <div>
          <div>
            <%= task.user.name %>
          </div>
          <div>
            <p><%= link_to '編集', edit_task_path(task) %></p>
            <ul>
              <li>タスク：<%= task.content %></li>
              <li>ステータス：<%= task.status %></li>
            </ul>
          <div>
            <% if current_user == task.user %>
              <%= link_to "Delete", task, method: :delete, data: {confirm: 'you sure?'}, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>